<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="401.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="cartasOrdenador" alignment="CENTER" prefHeight="224.0" prefWidth="378.0" spacing="20.0">
         <children>
            <ImageView fx:id="o1" fitHeight="118.0" fitWidth="92.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../cartas/carta.png" />
               </image>
            </ImageView>
            <ImageView fx:id="o2" fitHeight="122.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../cartas/2_of_hearts.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER_RIGHT" prefHeight="157.0" prefWidth="244.0">
               <children>
                  <ImageView fx:id="baraja" fitHeight="118.0" fitWidth="92.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../cartas/carta.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
      <HBox fx:id="cartasJugador" alignment="CENTER" prefHeight="270.0" prefWidth="620.0" spacing="10.0">
         <children>
            <VBox alignment="CENTER" prefHeight="224.0" prefWidth="182.0" spacing="40.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#pedirCarta" prefHeight="48.0" prefWidth="115.0" text="Pedir carta">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#plantarse" prefHeight="48.0" prefWidth="115.0" text="Plantarse">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <ImageView fx:id="j1" fitHeight="122.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="150.0" />
               </HBox.margin>
               <image>
                  <Image url="@../../cartas/2_of_clubs.png" />
               </image>
            </ImageView>
            <ImageView fx:id="j2" fitHeight="118.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../cartas/2_of_diamonds.png" />
               </image>
            </ImageView>
         </children>
         <padding>
            <Insets right="50.0" />
         </padding>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
